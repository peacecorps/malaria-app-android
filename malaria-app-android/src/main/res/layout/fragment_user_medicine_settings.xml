<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_15dp"
    tools:context=".ui.user_medicine_setting.MedicineSettingsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/activity_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/setup_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:text="@string/user_medicine_settings_activity_setup_label"
                android:textColor="@color/user_medicine_first_text_color"
                android:textSize="@dimen/text_size_30sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:layout_marginRight="@dimen/margin_20dp"
                android:background="@drawable/custom_line_border"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_30dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/drug_take_label"
                        style="@style/UserMedicineSettingsCommonTextAppearance"
                        android:paddingTop="@dimen/padding_15dp"
                        android:text="@string/user_medicine_settings_activity_drug_take_label"
                        android:textColor="@color/textColorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding_115dp" />
                </LinearLayout>

                <Spinner
                    android:id="@+id/drug_select_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/time_pick_label"
                    style="@style/UserMedicineSettingsCommonTextAppearance"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:text="@string/user_medicine_settings_activity_time_pick_label"
                    android:textColor="@color/textColorPrimary" />

                <TextView
                    android:id="@+id/time_pick_button"
                    style="@style/UserMedicineSettingsCommonTextAppearance"
                    android:layout_gravity="center"
                    android:paddingBottom="@dimen/padding_10dp"
                    android:paddingTop="@dimen/padding_5dp"
                    android:text="@string/user_medicine_settings_activity_time_pick_button"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/if_forget_label"
                        style="@style/UserMedicineSettingsCommonTextAppearance"
                        android:paddingBottom="@dimen/padding_10dp"
                        android:text="@string/user_medicine_settings_activity_if_forget_label"
                        android:textColor="@color/textColorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding_70dp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/done_button"
                style="@style/UserMedicineSettingsCommonTextAppearance"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_5dp"
                android:background="@color/colorPrimary"
                android:enabled="false"
                android:paddingLeft="@dimen/padding_40dp"
                android:paddingRight="@dimen/padding_40dp"
                android:text="@string/user_medicine_settings_activity_done_button"
                android:textColor="@color/textColorPrimary" />
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:gravity="bottom">

        <ImageView
            android:id="@+id/pc_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/user_medicine_settings_activity_pc_logo"
            android:scaleType="fitCenter"
            android:src="@drawable/pc_logo" />
    </LinearLayout>

</LinearLayout>