<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogHelp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10dp"
            android:gravity="center"
            android:text="@string/help_game_dialog_title"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/text_size_25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="@dimen/margin_20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/helpGameDialogInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description_help_game"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/text_size_16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_20dp"
            android:layout_marginTop="@dimen/margin_20dp"
            android:text="@string/help_game_dialog_heading"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/text_size_16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/helpGameDialogHowToPlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description_help_game"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/text_size_16sp" />


        <CheckBox
            android:id="@+id/helpGameDialogShowNextTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            android:checked="true"
            android:text="@string/help_game_dialog_showNextTime"
            android:textColor="@color/text_color_primary" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/margin_5dp"
        android:layout_weight="0.29"
        android:gravity="center|bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/helpGameDialogButtonStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_5dp"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_marginStart="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:background="@drawable/button_background"
            android:text="@string/help_game_dialog_buttonStart"
            android:textColor="@color/textColorPrimary" />
    </LinearLayout>
</LinearLayout>