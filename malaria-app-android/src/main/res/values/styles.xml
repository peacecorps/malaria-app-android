<resources xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.


    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:actionBarStyle">@style/MyActionBar</item>-->
        <item name="android:datePickerStyle">@style/MyDatePicker</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:windowBackground">@drawable/background</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

    </style>


    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <!--dialog background-->
        <item name="android:windowBackground">@drawable/dialog_background</item>

    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
    </style>

    <!-- Time picker style -->
    <style name="MyTimePicker" parent="android:style/Theme.Holo.Light.Dialog">
        <item name="android:divider">@color/textColorPrimary</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:editTextStyle">@style/AppTheme.TimePicker.EditTextStyle</item>
        <item name="android:borderlessButtonStyle">@style/AppTheme.DatePicker.Button.Borderless
        </item>
        <item name="android:buttonBarStyle">@style/AppTheme.ButtonBar.DatePicker</item>
    </style>

    <style name="AppTheme.TimePicker.EditTextStyle" parent="android:style/Widget.EditText">
        <item name="android:textColor">@color/textColorPrimary</item>

    </style>

    <style name="AppTheme.TimePicker.PopUpStyle" parent="android:style/Widget.PopupWindow">
        <item name="android:background">@color/colorPrimary</item>

    </style>

    <style name="AppTheme.TimePicker.ADialogStyle" parent="android:style/Theme.Holo.Dialog">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:windowFrame">@color/colorPrimary</item>

    </style>

    <style name="AppTheme.TimePicker.DialogPrefStyle" parent="android:style/Theme.Holo.Dialog">
        <item name="android:background">@color/colorPrimary</item>

    </style>

    <!-- Date picker style -->

    <style name="MyDatePicker" parent="android:style/Theme.Holo.Light.Dialog.NoActionBar.MinWidth">
        <item name="android:divider">@color/text_color_primary</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:editTextStyle">@style/AppTheme.DatePicker.EditTextStyle</item>
        <item name="android:datePickerStyle">@style/AppTheme.DatePicker.BackgroundStyle</item>
        <item name="android:borderlessButtonStyle">@style/AppTheme.DatePicker.Button.Borderless
        </item>
        <item name="android:buttonBarStyle">@style/AppTheme.ButtonBar.DatePicker</item>
    </style>

    <style name="AppTheme.DatePicker.BackgroundStyle" parent="android:style/Widget.DatePicker">
        <item name="android:background">@color/cream</item>
    </style>

    <style name="AppTheme.ButtonBar.DatePicker" parent="@android:style/Holo.ButtonBar.AlertDialog">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.DatePicker.EditTextStyle" parent="android:style/Widget.EditText">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>


    <style name="AppTheme.DatePicker.Button.Borderless" parent="@android:style/Widget.Holo.Button.Borderless">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.StatusBar.Title">
        <item name="android:textColor">@color/textColorPrimary</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AppTheme.ButtonBar.AlertDialog" parent="@android:style/Holo.ButtonBar.AlertDialog">

        <item name="android:background">@color/colorPrimary</item>

    </style>


    <style name="Widget.AppTheme.Button.Borderless" parent="@android:style/Widget.Holo.Button.Borderless">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


    <style name="UserMedicineSettingsCommonTextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="HeadingTextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_25sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="style_text_input" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorSecondary</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/textColorPrimary</item>
        <item name="colorControlActivated">@color/text_color_primary</item>
    </style>

    <style name="style_text_input_layout">
        <item name="android:layout_width">@dimen/width_300dp</item>
        <item name="android:layout_height">@dimen/height_60dp</item>
        <item name="android:layout_marginTop">@dimen/margin_20dp</item>
        <item name="android:theme">@style/style_text_input</item>

    </style>

    <style name="style_text_input_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="style_btn_background">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_dialog_heading">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:padding">@dimen/padding_10dp</item>
    </style>

    <style name="style_image_badge_dialog">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="style_btn_info_hub">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/margin_16dp</item>
        <item name="android:layout_marginRight">@dimen/margin_16dp</item>
        <item name="android:layout_marginTop">@dimen/margin_10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:padding">@dimen/padding_5dp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="MyFullScreenDialogTheme" parent="android:Theme">
        <!--&lt;!&ndash;buttons color&ndash;&gt;-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <!--&lt;!&ndash;title and message color&ndash;&gt;-->
        <!--<item name="android:textColorPrimary">@color/textColorPrimary</item>-->
        <!--&lt;!&ndash;dialog background&ndash;&gt;-->
        <!--<item name="android:windowBackground">@drawable/dialog_background</item>-->
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:background">@color/cream</item>

    </style>

    <!-- My tool bar -->

    <style name="ToolbarTextAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowColor">?colorAccent</item>
    </style>

    <style name="ToolbarTextAppearance.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MyToolbar">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:elevation" tools:targetApi="lollipop">4dp</item>
    </style>

    <!-- My checkbox -->
    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

</resources>